generator client {
        provider = "prisma-client-js"
        output   = "../generated/prisma"
}

datasource db {
        provider = "postgresql"
        url      = env("DATABASE_URL")
}

model User {
        id          Int          @id @default(autoincrement())
        email       String       @unique
        name        String?
        phoneNumber String?
        Payments    Payments[]
        Membership  Membership[]
        Complaints  Complaints[]
        Time        Time[]
}

model Payments {
        id            Int     @id @default(autoincrement())
        user          User    @relation(fields: [userId], references: [id])
        paymentStatus Boolean

        userId Int
}

model Membership {
        id                     Int     @id @default(autoincrement())
        subscribedWeeks        Int
        totalUsedHours         Float
        totalAssignedWeekHours Float
        usedUpHours            Boolean
        User                   User    @relation(fields: [userId], references: [id])
        insideUnipod           Boolean
        userId                 Int
}

model Complaints {
        id        Int    @id @default(autoincrement())
        complaint String
        User      User   @relation(fields: [userId], references: [id])
        userId    Int
}

model Time {
        id         Int      @id @default(autoincrement())
        user       User     @relation(fields: [userId], references: [id])
        logintime  DateTime
        logouttime DateTime

        userId Int
}
